=content_for :header do
  = render :partial => "layouts/agent_list_header"

.agents-list
  %ul
    - @agents.each do |agent|
      %li
        .image
          = link_to image_tag("agents/agent_#{agent.id}.png"), agent_events_path(agent)
        .description
          %ul
            %li.name
              = link_to agent.name, agent_events_path(agent)
            %li.mood
              = @agents_map[agent.name]
