- if @event.errors.any?
  #error_explanation
    %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
    %ul
      - @event.errors.full_messages.each do |msg|
        %li= msg

= simple_form_for @event do |f|
  %fieldset
    = f.input :event_type
    = f.input :description
    = f.input :mode
    = f.input :happen_time
    = hidden_field_tag("event[agent_id]", @event.agent_id)
  = f.submit
